<%- include('../partials/header') %>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAMmGMOtcaH0pNORJMA43INflioNSTI1ZY&callback=initMap"
      async defer>
</script>
<style>
    /* Google Maps */
    #map {
        height: 400px;
        width: 100%;
    }
</style>

<div class="container">
    <div class="row">
        <div class="col-md-6">
          
          <div class="card" style="width: 18rem;">
                <img src="<%= pothole.pic_url %>" alt="Lights" style="width:100%">
                <div class="card-body">
                  
                  <a href="#" class="btn btn-primary">Go somewhere</a>
                </div>
              </div>
        </div>
        <div class="col-md-6">
            <div id = "map"></div>
        </div>
        
      </div>
</div>

<script>
        function initMap() {
          var lat = <%= pothole.latitude %>;
          var lng = <%= pothole.longitude %>;
          var center = {lat: lat, lng: lng };
          var map = new google.maps.Map(document.getElementById('map'), {
              zoom: 10,
              center: center,
              scrollwheel: false
          });
          var contentString = `
            <strong><%= pothole.user_name %><br />
            
          `
          var infowindow = new google.maps.InfoWindow({
            content: contentString
          });
          var marker = new google.maps.Marker({
              position: center,
              map: map
          });
          marker.addListener('click', function() {
            infowindow.open(map, marker);
          });
        }
</script>

  

